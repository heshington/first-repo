docker run \
-d \
--name plex \
--network=host \
-e PLEX_UID="1000" \
-e PLEX_GID="1000" \
-e TZ="Pacific/Auckland" \
-v /opt/plex/config:/config \
-v /mnt/plex_media/shared/movies:/data/movies \
-v /mnt/plex_media/shared/tv_shows:/data/tvshows \
-v /mnt/plex_media/shared/music:/data/music \
-v /opt/plex/transcode:/transcode \
plexinc/pms-docker
